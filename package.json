{
  "name": "serveportal_backend",
  "version": "1.0.0",
  "description": "This is the backend for ServePortal",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "nodemon",
    "build": "npx prisma generate && tsc",
    "start": "node ./dist/index.js",
    "typecheck": "tsc --noEmit",
    "prisma": "prisma",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "translations:sort": "sort-json src/messages/*.json -i",
    "translations:format": "prettier --write src/messages",
    "translations:extract": "i18next 'src/**/*.{ts,tsx}' && pnpm run translations:sort && pnpm run translations:format",
    "translations:check": "i18next 'src/**/*.{ts,tsx}' --fail-on-update && pnpm run translations:sort && pnpm run translations:format",
    "i18n:sync": "ts-node --esm scripts/translate.ts && pnpm run translations:format"
  },
  "keywords": [],
  "author": "Dortana",
  "license": "ISC",
  "packageManager": "pnpm@10.24.0",
  "dependencies": {
    "@aws-sdk/client-s3": "3.982.0",
    "@prisma/client": "7.3.0",
    "@prisma/extension-accelerate": "3.0.1",
    "@react-email/components": "1.0.7",
    "bcrypt": "6.0.0",
    "contentful": "11.10.3",
    "deepl-node": "1.24.0",
    "dotenv": "17.2.3",
    "express": "5.2.1",
    "i18n": "0.15.3",
    "i18next-parser": "9.3.0",
    "jsonwebtoken": "9.0.3",
    "module-alias": "2.3.4",
    "prettier": "3.8.1",
    "resend": "6.9.1",
    "sort-json": "2.0.1",
    "winston": "3.19.0",
    "zod": "4.3.6"
  },
  "devDependencies": {
    "@types/bcrypt": "6.0.0",
    "@types/express": "5.0.6",
    "@types/i18n": "0.13.12",
    "@types/jsonwebtoken": "9.0.10",
    "@types/node": "^25.1.0",
    "@types/react": "19.2.13",
    "@types/react-dom": "19.2.3",
    "nodemon": "3.1.11",
    "prisma": "7.3.0",
    "ts-node": "10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "5.9.3"
  },
  "engines": {
    "node": "22.x"
  },
  "_moduleAliases": {
    "@": "dist"
  }
}
