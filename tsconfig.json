{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    "target": "ES2020",
    "module": "commonjs",
    "jsx": "react-jsx",

    "types": ["node", "react"],

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "prisma.config.ts"]
}
